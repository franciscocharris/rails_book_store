<p id="notice"><%= notice %></p>

<h1>tags</h1>
<%== pagy_bootstrap_nav(@pagy) %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to 'Show', tag %> - </td>
        <td><%= link_to "author: #{tag.author.name}", tag.author %></td>
        <% if tag.author.id.eql?(current_user.author.id) %>
          <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
          <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%= link_to 'New tag', new_tag_path %>

