<%= form_for([@book, @book.comments.build]) do |f| %>
<div class="field">
  <%= f.label :message, "message" %>
  <%= f.text_field :message, class: 'form-control', required: true %>
</div>
<div class="field mt-2">
  <%= f.submit "Submit", class: 'btn btn-primary', disable_with: 'Submiting...'%>
</div>
<% end %>